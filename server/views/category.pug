extends _layout
include ./_mixins/competitions-mixin

block content
    .main
        .container
            .section.text-center.section-landing
                img.categories-img(src='/static/imgs/categories-images/'+result.image)
                h1 #{result.title}
                p #{result.description}
                +competitions-list(result.competitions)

block scripts

    script(src="/static/bower_components/jquery/dist/jquery.min.js")
    script(src="/static/utils/requester.js")
    script(src="/static/js/register.js")