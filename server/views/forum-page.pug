extends _layout

block content
    ul.list.list-horizontal.list-pages.text-center
        - for(let i = 1; i <= result.params.pages; i+=1 )
            li
                if result.params.page === i
                    a.btn.btn-danger.disabled(href="/forum?page=" + i)
                        = i
                else
                    a.btn.btn-danger(href="/forum?page=" + i)
                        = i

    each forumPost in result.forumPosts
        div
            h3.forum-post
                a(href="/forum/"+ forumPost._id)= forumPost.title
            p Posted by #{forumPost.user.username}(#{forumPost.user.points})
            p.likes Likes: #{forumPost.likes}
                //-TODO: send put request 
                button.btn-like Like
    a(href="/forum/create") Create Post