extends _layout

block styles
    link(rel="stylesheet" type="text/css" href="/static/bower_components/toastr/toastr.css")

block content
    //- form(action="/competitions/create" method="post")
    form
        label(for="name") Name
        input(id="name" class="form-control" type="text" name="name" placeholder="Name")
        label(for="place") Place
        input(id="place" class="form-control" type="text" name="place" placeholder="Place")
        br
        label(for="points") Points
        input(id="points" class="form-control" type="text" name="points" placeholder="Points")
        br
        label(for="keys") Keys
        input(id="keys" class="form-control" type="text" name="keys" placeholder="Keys")
        br
        label(for="startDate") StartDate
        input(id="startDate" class="form-control" type="text" name="startDate" placeholder="startDate")
        br
        label(for="endDate") EndDate
        input(id="endDate" class="form-control" type="text" name="endDate" placeholder="endDate")
        br
        label(for="category") Category
        select(id="category" class="form-control" name="category")
            option(value="") Choose Category
            each category in result
                option(value= category) #{category}
        br
        label(for="level")
        input(id="level" class = "form-control" type = "text" name = "level" placeholder="Level")
        label(for="latitude") Latitude
        input(id="latitude" class="form-control" type="number" name="latitude" placeholder="Latitude")
        br
        label(for="longitude") Longitude
        input(id="longitude" class="form-control" type="number" name="longitude" placeholder="Longitude")
        br
        div(id="map" style="height:200px;width:200px")
        input(type="submit" id="create" class="btn btn-lg" value="Create")

block scripts 
    script(src="/static/bower_components/jquery/dist/jquery.min.js")
    script(src="/static/bower_components/toastr/toastr.js")
    script(src="/static/js/create-competition.js") 
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0PmHg9An9AdDbib9-jYefjSKSnapzFLQ&callback=initMap")