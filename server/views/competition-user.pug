extends competition.pug

block styles
    link(rel="stylesheet" type="text/css" href="/static/bower_components/toastr/toastr.css")

block like

    div(id="competition-info" data-id=result._id)
        h3.competition
            a(href="/competitions/"+ result._id)= result.title
        p.likes Likes: 
            span(id='competition-likes-count') #{result.likes}
            if result.usersLiked.indexOf(user.username) < 0
                button.btn.btn-success.like-competition Like
            else
                button.btn.btn-danger.dislike-competition Dislike    

block joining
    if result.hasJoined
        button.btn.btn-danger(id="leave") Leave
        button.hidden.btn.btn-success(id="join") Join
    else
        button.hidden.btn.btn-danger(id="leave") Leave
        button.btn.btn-success(id="join") Join

block scripts
    script(src="/static/bower_components/jquery/dist/jquery.min.js")
    script(src="/static/bower_components/toastr/toastr.js")
    script(src="/static/js/join-competition.js")
    script(src="/static/js/like-dislike-competition.js")
    