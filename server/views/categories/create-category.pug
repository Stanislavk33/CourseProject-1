extends ../_layout

block content
    .section.section-full-screen.section-signup(style="background: blur;")
        .container
            .row
                .col-md-8.col-md-offset-2
                    .card.card-signup
                        form.form(action="/categories/create" method="post" enctype="multipart/form-data")
                            .header.header-info.text-center(style="height: 50%;")
                                h2 Create new category
                                .social-line
                            .input-group
                                span.input-group-addon
                                    i.material-icons title
                                .form-group.is-empty.has-info
                                    input.form-control(id="post-title" type="text" name="title" placeholder="Title")
                            .input-group
                                span.input-group-addon
                                    i.material-icons description
                                .form-group.is-empty.has-info
                                    textarea.form-control(id="post-description" type="text" name="description" placeholder="Description")
                            .input-group
                                span.input-group-addon
                                    i.material-icons picture_in_picture
                                span.input-group-addon(style="display: block;") Upload avatar
                                input(type="file" id="tb-avatar" name="avatar" value="Upload" class="btn btn-info")
                            .footer.text-center
                                input(type="submit" id="create" class="btn btn-lg btn-info" value="Create")