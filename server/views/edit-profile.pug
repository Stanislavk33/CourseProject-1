extends _layout

block content
    form(method="post" enctype="multipart/form-data")
        label(for="first-name") First Name
        input(id="first-name" class="form-control" type="text" name="firstName" placeholder="First Name" value=result.firstName)
        br
        label(for="last-name") Last Name
        input(id="last-name" class="form-control" type="text" name="lastName" placeholder="Last Name" value=result.lastName)
        br
        label(for="email") E-mail
        input(id="email" class="form-control" type="email" name="email" placeholder="E-mail" value=result.email)
        br
        label(for="avatar") Upload new avatar
        input(id="avatar" class="form-control" type="file" name="avatar" placeholder="Avatar")
        br
        input(type="submit" class="btn btn-lg" value="Save")