extends ../_layout

block content
    .section.section-full-screen.section-signup(style="background: blur;")
        .container
            .row
                .col-md-4.col-md-offset-4
                    .card.card-signup
                        form.form(action="/users/"+result.user.username+"/edit" method="post" enctype="multipart/form-data")
                            .header.header-info.text-center(style="height: 50%;")
                                h4 Edit
                            .input-group
                                span.input-group-addon
                                    i.material-icons email
                                input.form-control(type="email" id="tb-email" placeholder="Edit e-mail" name="email" class="form-control" value=result.user.email)
                            .input-group
                                span.input-group-addon 
                                    i.material-icons face
                                input.form-control(type="text" id="tb-first-name" placeholder="Edit first name" name="firstName" class="form-control" value=result.user.firstName)
                            .input-group
                                span.input-group-addon
                                    i.material-icons face
                                input.form-control(type="text" id="tb-last-name" placeholder="Edit last name" name="lastName" class="form-control" value=result.user.lastName)
                            .input-group
                                span.input-group-addon
                                    i.material-icons picture_in_picture
                                span.input-group-addon(style="display: block;") Upload new avatar
                                input(type="file" id="tb-avatar" name="avatar" value="Upload" class="btn btn-info")
                            .footer.text-center
                                input(type="submit" value="Save" class="btn btn-info")
