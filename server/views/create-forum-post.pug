extends _layout

block content
    form(action="/forum/create" method="post")
        label(for="post-title") Title
        input(id="post-title" class="form-control" type="text" name="title" placeholder="Title")
        br
        label(for="post-description") Description
        textarea(id="post-description" class="form-control" type="text" name="description" placeholder="Description")
        br
        input(type="submit" class="btn btn-lg" value="Create")